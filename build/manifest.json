{
    "name": "Source Code Injector",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs", "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html",
    "browser_action": {
        "default_icon": "images/icon128.png"

    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["injector.js"],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}